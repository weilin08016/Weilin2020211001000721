<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--add code about nwe servlet-->
    <context-param>
        <param-name>driver</param-name>
        <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
    </context-param>
    
    <servlet>
        <servlet-name>hhh</servlet-name>
        <servlet-class>com.weilin.week2.demo.HelloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.weilin.week3.demo.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LifeCycleServlet</servlet-name>
        <servlet-class>com.weilin.week3.demo.LifeCycleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JDBCemoServlet</servlet-name>
        <servlet-class>com.weilin.week4.JDBCemoServlet</servlet-class>
        <init-param>
            <param-name>driver</param-name>
            <param-value>com.micosoft.sqlserver.jdbc.SQLServerDriver</param-value>
        </init-param>
        <init-param>
            <param-name>username</param-name>
            <param-value>sa</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>admin123456789</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LifeCycleServlet</servlet-name>
        <url-pattern>/life</url-pattern>
    </servlet-mapping>
            <servlet-mapping>
                <servlet-name>hhh</servlet-name>
                <url-pattern>/hello</url-pattern>
            </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JDBCemoServlet</servlet-name>
        <url-pattern>/jdbc</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>driver</param-name>
        <param-value>jdbc:sqlserver://localhost;databaseName=userdb</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>    </context-param>
    <context-param>
        <param-name>username</param-name>
        <param-value>sa</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>admin123456789</param-value>
    </context-param>





</web-app>